{
  "appId": "com.flashcardstudy.app",
  "productName": "Flashcard Study",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "node_modules/electron-updater/**/*"
  ],
  "extraMetadata": {
    "main": "electron/main.cjs"
  },
  "publish": {
    "provider": "github",
    "owner": "kindnetteth",
    "repo": "local-study-hub"
  },
  "win": {
    "target": ["nsis"],
    "publish": ["github"]
  },
  "mac": {
    "target": ["dmg"],
    "category": "public.app-category.education",
    "publish": ["github"]
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Education",
    "publish": ["github"]
  }
}
