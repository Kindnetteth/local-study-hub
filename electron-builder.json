{
  "appId": "com.flashcardstudy.app",
  "productName": "Flashcard Study",
  "directories": {
    "output": "release"
  },
  "files": [
    "dist/**/*",
    "electron/**/*",
    "node_modules/electron-updater/**/*"
  ],
  "publish": {
    "provider": "github",
    "owner": "YOUR_GITHUB_USERNAME",
    "repo": "YOUR_REPO_NAME"
  },
  "win": {
    "target": ["nsis"],
    "icon": "public/favicon.ico",
    "publish": ["github"]
  },
  "mac": {
    "target": ["dmg"],
    "icon": "public/favicon.ico",
    "category": "public.app-category.education",
    "publish": ["github"]
  },
  "linux": {
    "target": ["AppImage"],
    "category": "Education",
    "publish": ["github"]
  }
}
